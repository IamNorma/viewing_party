<h1 align= "center">Register User</h1>
<center>
  <%= form_tag "/users", method: :create do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
    <%= label_tag :password %>
    <%= password_field_tag :password, value: nil %>
    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation %>
    <%= submit_tag 'Register New User' %>
  <% end %>
</center>
