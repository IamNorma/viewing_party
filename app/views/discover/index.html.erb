<h1>Movie Discovery</h1>

<div>
  <%= button_to "Discover Top 40 Movies", "/movies", method: :get %>
</div>

<%= form_tag "/movies", value: "Search", method: :get do %>
<legend><span class="number"></span> Search By Movie</legend>
  <%= label_tag :search %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search By Movie' %>
<% end %>
